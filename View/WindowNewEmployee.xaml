<Window x:Class="Lab_4_TokarevD.N._БПИ_23_01.View.WindowNewEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_4_TokarevD.N._БПИ_23_01.View"
        mc:Ignorable="d"
        Title="WindowNewEmployee" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>

        <Label Content="Фамилия:" VerticalAlignment="Center" Height="26"/>
        <TextBox Grid.Row="0" Margin="100,0,0,0" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Имя:" Grid.Row="1" VerticalAlignment="Center" Height="26"/>
        <TextBox Grid.Row="1" Margin="100,0,0,0" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Дата рождения:" Grid.Row="2" VerticalAlignment="Center" Height="26"/>
        <DatePicker Grid.Row="2" Margin="100,0,0,2" SelectedDate="{Binding Birthday}"/>

        <Label Content="Должность:" Grid.Row="3" VerticalAlignment="Center" Height="32"/>
        <ComboBox x:Name="CbRole" Grid.Row="3" Margin="100,1,0,9" 
                  DisplayMemberPath="NameRole"
                  SelectedValuePath="Id"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="4" Margin="0,6,0,223" Width="170">
            <Button Content="ОК" Width="75" Margin="5" IsDefault="True" Click="Ok_Click" Height="35"/>
            <Button Content="Отмена" Width="75" Margin="5" IsCancel="True" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
