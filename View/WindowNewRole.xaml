<Window x:Class="Lab_4_TokarevD.N._БПИ_23_01.View.WindowNewRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_4_TokarevD.N._БПИ_23_01.View"
        mc:Ignorable="d"
        Title="WindowNewRole" Height="177" Width="422">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Наименование должности:" VerticalAlignment="Center"/>
        <TextBox Margin="188,0,19,50" Text="{Binding NameRole, UpdateSourceTrigger=PropertyChanged}" Grid.RowSpan="2"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,25,0,-5">
            <Button Content="ОК" Width="75" Margin="5" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Отмена" Width="75" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
